    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="272dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_story" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_stories"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/v_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:spanCount="2"
        app:layout_constraintTop_toBottomOf="@+id/horizon"
        tools:listitem="@layout/item_stories" />

    <View
        android:id="@+id/v_down"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/purple_R"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="+3"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/tv_youtube" />


    <ImageButton
        android:id="@+id/exit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="208dp"
        android:background="@drawable/main_background"
        android:scaleType="fitCenter"
        android:src="@drawable/exit"
        app:layout_constraintBottom_toTopOf="@+id/tv_exit"
        app:layout_constraintEnd_toStartOf="@+id/tv_3"
        app:layout_constraintTop_toTopOf="@+id/v_down"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/main_background"
        android:scaleType="fitCenter"
        android:src="@drawable/diamond"
        app:layout_constraintBottom_toTopOf="@+id/tv_youtube"
        app:layout_constraintEnd_toStartOf="@+id/youtube" />

    <ImageButton
        android:id="@+id/youtube"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/main_background"
        android:scaleType="fitCenter"
        android:src="@drawable/youtube"
        app:layout_constraintBottom_toTopOf="@id/tv_youtube"
        app:layout_constraintEnd_toEndOf="@+id/tv_youtube" />


    <View
        android:id="@+id/view"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/gradientp"
        app:layout_constraintBottom_toTopOf="@+id/cv_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <View
        android:id="@+id/view1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradientb"
        app:layout_constraintBottom_toTopOf="@+id/cv_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.218"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="247dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/main_background"
        android:scaleType="fitCenter"
        android:src="@drawable/diamond"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/main_background"
        android:scaleType="fitCenter"
        android:src="@drawable/cup"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/bt_tea"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="centre"
        android:background="@drawable/roundedbuttonP"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_tea"
        app:layout_constraintEnd_toEndOf="@+id/bt_tea"
        app:layout_constraintStart_toStartOf="@+id/bt_tea"
        app:layout_constraintTop_toTopOf="@+id/bt_tea"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/bt_tools"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundedbuttond"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id = "@+id/tv_cup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "4"
        android:textSize = "16dp"
        android:textColor = "@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/bt_tea"/>


    <TextView
        android:id = "@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "3294"
        android:textSize = "16dp"
        android:textColor = "@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintEnd_toStartOf="@+id/bt_money"/>

    <HorizontalScrollView
        android:id="@+id/horizon"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_story">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@color/purple_R"
                android:text="Новое в КР"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@color/purple_R"
                android:text="Продолжить"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@color/purple_R"
                android:text="мистика"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="100dp"
                android:text="Фэнтези"
                android:background = "@color/purple_R"
                android:textColor = "@color/white"
                android:textSize="11sp"
                android:layout_height="40dp"
                android:layout_margin="5dp" />




        </LinearLayout>
    </HorizontalScrollView>
    <ImageView
        android:id="@+id/tools"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tools"
        app:layout_constraintBottom_toBootomOf="@+id/bt_tools"
        app:layout_constraintEnd_toEndOf="@+id/bt_tools"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/bt_tools"
        app:layout_constraintTop_toTopOf="@+id/bt_tools"
         />

    <ImageButton
        android:id="@+id/bt_money"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/roundedbuttonb"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_money"
        app:layout_constraintEnd_toEndOf="@+id/bt_money"
        app:layout_constraintStart_toStartOf="@+id/bt_money"
        app:layout_constraintTop_toTopOf="@+id/bt_money"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="6dp"
        android:text="Реклама"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/tv_exit"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выход"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_youtube"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>